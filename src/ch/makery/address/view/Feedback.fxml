<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.FeedbackController">
   <children>
      <AnchorPane layoutX="-14.0" layoutY="-7.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label layoutX="122.0" layoutY="44.0" text="Give us feedback about the application">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="67.0" layoutY="83.0" text="Please select the type of feedback">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <RadioButton fx:id="LoginTButton" layoutX="67.0" layoutY="123.0" mnemonicParsing="false" onAction="#clickLoginTButton" text="Login Trouble" />
