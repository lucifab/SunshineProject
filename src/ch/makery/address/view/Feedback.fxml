            <RadioButton fx:id="suggestionB" layoutX="68.0" layoutY="209.0" mnemonicParsing="false" onAction="#clickSuggestionButton" text="Suggestions" />
            <TextField fx:id="commentBox" layoutX="73.0" layoutY="243.0"  prefHeight="78.0" prefWidth="362.0" promptText="Add comment here" />
            <Button fx:id="SubmitButton" layoutX="73.0" layoutY="346.0" mnemonicParsing="false" onAction="#clickSubmitButton" prefHeight="31.0" prefWidth="362.0" text="Submit" />
         </children>
      </AnchorPane>
